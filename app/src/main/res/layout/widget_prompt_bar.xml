<?xml version="1.0" encoding="utf-8"?>
<cn.dhtv.mobile.ui.widget.PromptBar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/theme_blue_light"
    app:cardElevation ="3dp"
    app:cardCornerRadius="15dp"
    android:visibility="gone"
    android:alpha="1"
    android:id="@+id/promptBar">
    <TextView
        android:id="@+id/hint"
        android:textColor="@color/black"
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/text_size_title_subtitle"/>

</cn.dhtv.mobile.ui.widget.PromptBar>